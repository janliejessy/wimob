<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow"
                />

            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottomNavbar"
                app:menu="@menu/menu_navigation"
                android:background="#c42121"
                app:itemIconTint="#ffffff"
                app:itemTextColor="#ffffff"
                />

        </FrameLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ListActivity">

        <ImageView
            android:id="@+id/im_item_icon"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/colorPrimary"
            android:padding="36dp"
            android:src="@drawable/ic_tag_faces_black_36dp"
            android:tint="#FFFFFF"/>

        <TextView
            android:id="@+id/item_txtName"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/im_item_icon"
            android:paddingTop="18dp"
            android:paddingBottom="10dp"
            android:paddingLeft="18dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/item_txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textStyle="italic"
            android:layout_below="@+id/item_txtName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="18dp"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btn_min"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginStart="22dp"
            android:layout_marginTop="68dp"
            android:layout_below="@+id/item_txtDesc"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/item_txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:text="0"
            android:layout_marginLeft="12dp"
            android:layout_alignBaseline="@+id/btn_min"
            android:layout_alignBottom="@+id/btn_min"
            android:layout_toEndOf="@+id/btn_min"
            android:layout_marginStart="22dp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="+"
            android:layout_marginStart="25dp"
            android:layout_alignBaseline="@+id/item_txtQuantity"
            android:layout_alignBottom="@+id/item_txtQuantity"
            android:layout_toEndOf="@+id/item_txtQuantity" />

        <TextView
            android:id="@+id/item_txtPrice"
            android:text="PRICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_txtName"
            android:layout_alignBottom="@+id/item_txtName"
            android:layout_alignEnd="@+id/btn_add_to_cart" />

        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="Add to Cart"
            android:layout_alignBaseline="@+id/btn_add"
            android:layout_alignBottom="@+id/btn_add"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
