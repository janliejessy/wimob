<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wirelessmobile.menuq.ui.HomeActivity">

    <TextView
        android:id="@+id/homeActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Categories"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/appetizer"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:onClick="appetizersButtonPressed"
        android:text="Appetizers"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="@drawable/appetizer"
        android:textColorHighlight="#000000"
        android:shadowColor="#000000"
        android:shadowDx="4.0"
        android:shadowDy="4.0"
        android:shadowRadius="20.0" />

    <Button
        android:id="@+id/main_course"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="163dp"
        android:onClick="mainCourseButtonPressed"
        android:text="Main Course"
        android:textColor="#ffffff"
        android:textColorHint="#000000"
        android:textSize="30dp"
        android:background="@drawable/main_course"
        android:textColorHighlight="#000000"
        android:shadowColor="#000000"
        android:shadowDx="4.0"
        android:shadowDy="4.0"
        android:shadowRadius="20.0" />

    <Button
        android:id="@+id/drink"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="260dp"
        android:onClick="drinkButtonPressed"
        android:text="Drinks"
        android:textColor="#ffffff"
        android:textColorHint="#000000"
        android:textSize="30dp"
        android:background="@drawable/drink"
        android:textColorHighlight="#000000"
        android:shadowColor="#000000"
        android:shadowDx="4.0"
        android:shadowDy="4.0"
        android:shadowRadius="20.0"/>

    <Button
        android:id="@+id/dessert"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="358dp"
        android:onClick="dessertButtonPressed"
        android:text="Desserts"
        android:textColor="#ffffff"
        android:textColorHint="#000000"
        android:textSize="30dp"
        android:background="@drawable/desserts"
        android:textColorHighlight="#000000"
        android:shadowColor="#000000"
        android:shadowDx="4.0"
        android:shadowDy="4.0"
        android:shadowRadius="20.0"/>





    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow"
            />

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomNavbar"
            app:menu="@menu/menu_navigation"
            android:background="#c42121"
            app:itemIconTint="#ffffff"
            app:itemTextColor="#ffffff"
            />

    </FrameLayout>



</android.support.design.widget.CoordinatorLayout>
