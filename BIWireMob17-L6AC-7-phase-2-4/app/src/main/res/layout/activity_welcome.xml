<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#db0036">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/menu"
        android:tint="#ffffff"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtView_note2"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Welcome to MenuQ.
Press the button to start!"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/main_menu_button"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="START MY ORDER"
        android:textSize="25dp"
        android:textColor="#000000"
        android:onClick="startButtonPressed"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/txtView_note2"
        android:layout_marginTop="29dp"
        android:background="#f1a496"/>

    <TextView
        android:id="@+id/txtView_note3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MenuQ Â© 2017"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>